rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own profile, anyone can read a public profile
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }
    
    // Businesses can be read by anyone, but only written by the author.
    match /businesses/{businessId} {
        allow read: if true;
        allow create: if request.auth.uid == request.resource.data.authorId;
        allow update, delete: if request.auth.uid == resource.data.authorId;
    }

    // Listings can be read by anyone, but only written by the author.
    match /listings/{listingId} {
        allow read: if true;
        allow create: if request.auth.uid == request.resource.data.authorId;
        allow update, delete: if request.auth.uid == resource.data.authorId;
    }
  }
}
