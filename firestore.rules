rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection
    match /users/{userId} {
      // Anyone can read a user's public profile. This is required for public profile pages
      // and for the query that finds users by username. `read` includes `get` and `list`.
      allow read: if true;
      
      // Only the authenticated user can create or update their own profile.
      // Deletes are not allowed from the client.
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }
  }
}
