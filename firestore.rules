
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can manage their own profile. Anyone can read a user's public profile.
    match /users/{userId} {
      allow read;
      allow write: if request.auth.uid == userId;
    }

    // Logged-in users can read their own notifications.
    match /notifications/{notificationId} {
      allow read, update: if request.auth.uid == resource.data.userId;
    }

    // Logged-in users can read their own diary notes.
    match /diaryNotes/{noteId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    // Logged-in users can create and read their own reminders
    match /reminders/{reminderId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    // Logged-in users can read messages sent to them, and anyone can send a message.
    match /messages/{messageId} {
      allow read, update: if request.auth.uid == resource.data.recipientId;
      allow create; // Anyone can send a message
    }

    // All these content types are public to read, but only the author can create/update/delete
    match /{collection}/{docId} 
        where collection in ['posts', 'events', 'listings', 'offers', 'jobs', 'businesses'] {
      allow read;
      // Allow create if user is authenticated
      allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId;
      // Allow update and delete if user is the author
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
  }
}
