rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // By default, allow public read access to all files.
    // This is suitable for public profile pictures, event images, etc.
    match /{allPaths=**} {
      allow read;
    }
    
    // Only allow authenticated users to write files to their own "folder".
    // The path structure (e.g., /avatars/USER_ID/...) is enforced by the client code.
    // This rule ensures a user can't write to another user's folder.
    match /{path}/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
