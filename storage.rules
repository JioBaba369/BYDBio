rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Public read for all files. This is common for profile pictures and content images.
    match /{allPaths=**} {
      allow read: if true;
    }

    // User can only write to their own avatar path.
    match /avatars/{userId}/{fileName} {
      allow write: if isAuthenticated() 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Users can only write to their own content paths (posts, events, etc.)
    match /{collection}/{userId}/{docId}/{fileName} {
       allow write: if isAuthenticated()
                    && request.auth.uid == userId
                    && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                    && request.resource.contentType.matches('image/.*');
    }

    // A separate rule for promo page logos, as the path structure is slightly different
     match /promoPages/{userId}/{docId}/{subfolder}/{fileName} {
       allow write: if isAuthenticated()
                    && request.auth.uid == userId
                    && (subfolder == 'header' || subfolder == 'logo')
                    && request.resource.size < 5 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
  }
}
