rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Default to denying all access
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow users to write their own avatar
    // Path example: /avatars/someUserId
    match /avatars/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to write to their own content folders
    // Path examples: /events/someUserId/... or /posts/someUserId/...
    match /{contentType}/{userId}/{allSubPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
